<div id="flex-part">
    <h1 class="header">MUSIC APP</h1>
    <h2 class="user">NEW USER</h2>

    <form action="<%= users_url %>" method="Post">
        <input type="hidden" name='authenticity_token' value='<%= form_authenticity_token %>'>
        <label for="email">Email</label>
        <input type="text" name="user[email]" id="email" value="<%=@user.email%>"/>

        <br>
        <br>

        <label for="password">Password</label>
        <input type="password" name="user[password]" id="password" value="<%=@user.password%>"/>

        <br>
        <br>

        <input type="submit" value="Submit"/> 
    </form> 
</div>



